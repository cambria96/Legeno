<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.ui.home.subView.statistic.StatisticFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="17dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="18.7dp"
                android:layout_marginStart="18.3dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번 달 총 지출"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="자세히 보기 >"
                        android:textAlignment="textEnd"
                        android:textSize="12sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/current_month_usage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 원"
                        android:textSize="15sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지난 달 보다 "
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/compare_usage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1231232"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/compare_usage_tail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 원 ."
                        android:textSize="15sp"/>
                </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="17dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="18.7dp"
                android:layout_marginStart="18.3dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="고정적이지 않은 지출"
                            android:textSize="15sp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/unfix_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10건"
                            android:textSize="13sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/unfix_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="자세히 보기 >"
                            android:textAlignment="textEnd"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/unfix_usage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000000"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 원"
                            android:textSize="15sp"/>
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="월별 수입/지출 통계"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <com.github.mikephil.charting.charts.LineChart

                android:id="@+id/line_chart"

                android:layout_width="match_parent"

                android:layout_height="300dp" >

            </com.github.mikephil.charting.charts.LineChart>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="17dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="18.7dp"
                android:layout_marginStart="18.3dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일일 평균 소비 금액"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/avg_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000000"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 원"
                            android:textSize="15sp"/>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주간 지출 통계"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <com.github.mikephil.charting.charts.BarChart

                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
            
        </LinearLayout>
    </ScrollView>


</FrameLayout>